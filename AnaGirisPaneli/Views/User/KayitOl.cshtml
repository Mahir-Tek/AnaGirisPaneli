<form asp-action="KayitOl" method="post">

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Mail Adresi</label>
        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="isim@örnek.com" name="Mail" required>
    </div>
    <label for="inputPassword5" class="form-label">Şifre</label>
    <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock" name="Sifre" required>
    <div id="passwordHelpBlock" class="form-text">
        Şifreniz 8-20 karakter aralığında olmalıdır. Özel karakter, aralık ve emoji kullanılamaz.
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Ad</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="Ad" required>
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Soyad</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="Soyad" required>
    </div>

    <button type="submit" class="btn btn-primary"> Kayıt Ol</button>
    <a href="@Url.Action("GirisYap", "User")" class="btn btn-primary">Giriş Yap</a>

</form>